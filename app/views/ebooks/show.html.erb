<body id="no-scroll-page">
  <div class="container form-background-grey py-4">
    <div class="row justify-content-center blue-grey-background-form">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="form-frame p-4 mx-4">
          <div class="text-center mb-3">
            <%= link_to "PrÃ©visualiser mon e-book", "https://www.canva.com/design/DAEQhusF-jI/doc1atMkZ9lQONcQDSmrOg/view", class: "btn btn-primary preview-button text-white" %>
          </div>
          <div class="card-title position-relative">
            <%= link_to ebooks_path, class: "arrow-link position-absolute" do %>
              <i class="fa-solid fa-arrow-left-long"></i>
            <% end %>
            <h3 class="my-4 text-center">
              <%= @ebook.ebook_title %>
            </h3>
          </div>
            <% if @recipages.present? %>
              <% @recipages.each do |recipage| %>
          <div class="recipages-container row d-flex align-item-evenly">
                <a href="<%= recipe_path(recipage.recipe) %>" class="card-recipages row mx-0 no-margin" >
                  <div class="card-recipages-image col-3">
                    <% if recipage.recipe.photo.attached? %>
                      <%= image_tag recipage.recipe.photo, alt: recipage.recipe.title %>
                    <% end %>
                  </div>
                  <div class="card-recipages-content col-5">
                    <h3><%= recipage.recipe.title %></h3>
                  </div>
                  <div class="card-recipages-arrow col-2">
                   <i class="fa-solid fa-magnifying-glass"></i>
                  </div>
                  </a>

                  <div class="card-recipages-trash col-2">
                    <%= link_to  recipe_recipage_path(recipage), method: :delete, data: { confirm: 'Souhaitez-vous retirer cette recette?' } do %>
                    <i class="fa-solid fa-xmark"></i>
                    <% end %>
                  </div>

                  </div>
              <% end %>
            <% else %>
              <p>No recipages available for this ebook.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
